.panel
  color #fff
  margin-bottom 1.5em
  &.section-html
    background-color $sectionHTML
  &.section-css
    background-color $sectionCSS
  &.section-javascript
    background-color $sectionJavascript
  &.section-documents
    background-color $sectionDocuments
.panel-header
  padding 1em
  h2
    margin-bottom 0
    a
      color #fff
  .section-html &
    background-color $sectionHTMLDark
  .section-css &
    background-color $sectionCSSDark
  .section-javascript &
    background-color $sectionJavascriptDark
  .section-documents &
    background-color $sectionDocumentsDark
.panel-content
  padding 1em 1em 1px
  a
    color #fff


.page-content
  .section
    padding 1.5em 0 0
    @media $b700
      padding 3em 0 1.5em
  .section:nth-child(even)
    background-color $colorBodyBgDark


body
  counter-reset ref-link ref-list

.reference-link
  &:before
    counter-increment ref-link
    content '[' counter(ref-link) ']'

.section-references
  ul
    font-size 0.8em
  li
    list-style none
    &:before
      counter-increment ref-list
      content '[' counter(ref-list) '] '

