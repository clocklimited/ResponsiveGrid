.section
  position relative
.hash-link
  position absolute
  top 0
  right 0
  font-size 1.6em
  line-height 1
  text-indent 110%
  white-space nowrap
  overflow hidden
  display block
  width 1em
  height 1em
  background-image url("/resource/images/sprite.png")
  background-position 0px 0px
  background-repeat no-repeat
  background-size 100% auto
  .svg &
    background-image url("/resource/images/sprite.svg")

  &:hover
    background-position 0px -32px

.hash-link:before
  display inline-block
  content " "
  margin-top -200px
  height 200px
  visibility hidden






//
// TABBED AREAS
//

.tabs
  position relative

.tabs__nav
  position absolute
  top 0
  right 0

  li
    float left
    list-style none
    margin-left -1px

  button
    display block
    border 1px solid #e7e7e7
    background-color #eee
    color #ccc
    padding 0.5em 1em

    &:focus
    &:hover
      color #aaa
      background-color #e7e7e7
  li.active button
      color #aaa
      background-color #e7e7e7

.tabs__content
  clear left

.js .tabs__item
  display none

  &.active
    display block


// Blockquote
blockquote
  p
    font-size 1.6em
    line-height 1.3

  p:first-of-type
    &:before
      content open-quote
    &:after
      content close-quote

  small
    display block
    text-align right
    font-size 0.4em
    margin-top 0.2em

    &, a, cite
      color #777
      font-style normal

@media $b700
  blockquote
    p
      padding-left 1.5em
      padding-right 1.5em
